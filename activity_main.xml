<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.famou.calculator.MainActivity"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="00000.00"
        android:gravity="end"
        android:textSize="30dp"
        android:id="@+id/display"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="3"
        android:layout_below="@id/display"
        android:id="@+id/numbuttom"
        android:useDefaultMargins="true"
        >
        <Button
            android:text="7"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
            />
        <Button
            android:text="8"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
            />
        <Button
            android:text="9"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
            />
        <Button
            android:text="4"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
            />
        <Button
            android:text="5"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
            />
        <Button
            android:text="6"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
        />
        <Button
            android:text="1"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
            />
        <Button
            android:text="2"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
            />
        <Button
            android:text="3"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
            />
        <Button
            android:text="."
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="DotClick"
            />
        <Button
            android:text="0"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="gridbutton"
            />
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/numbuttom"
        android:layout_toRightOf="@id/numbuttom"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="4"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="C"
            android:layout_weight="2"
            android:onClick="Resetbutton"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="Operator"
            android:text="+"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="Operator"
            android:text="-"/>
    </LinearLayout>
    <Button
        android:id="@+id/equal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divide_mul"
        android:onClick="equalclick"
        android:text="="/>
    <LinearLayout
        android:id="@+id/divide_mul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numbuttom"
        android:weightSum="4">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Operator"
            android:text="X"
            android:layout_weight="2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Operator"
            android:text="%"
            android:layout_weight="2"/>
    </LinearLayout>
</RelativeLayout>
